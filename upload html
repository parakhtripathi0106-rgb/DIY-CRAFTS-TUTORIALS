    <script>
        // Minimal JS for mobile navigation toggle
        document.querySelector('.menu-toggle').addEventListener('click', () => {
            document.querySelector('.nav-links').classList.toggle('active');
        });

        // Optional: JS for displaying selected file names
        const fileInput = document.getElementById('tutorial-media');
        const fileList = document.getElementById('file-list');

        fileInput.addEventListener('change', () => {
            fileList.innerHTML = ''; // Clear previous list
            if (fileInput.files.length > 0) {
                for (const file of fileInput.files) {
                    const listItem = document.createElement('div');
                    listItem.textContent = file.name;
                    listItem.classList.add('file-item');
                    fileList.appendChild(listItem);
                }
            } else {
                fileList.textContent = 'No files chosen.';
            }
        });

        // Simple form submission alert (no actual upload/backend)
        document.querySelector('.upload-form').addEventListener('submit', function(e) {
            e.preventDefault();
            alert('Tutorial submitted successfully! (This is a demo, no actual upload occurred.)');
            // In a real app, you'd send this data to a server
            this.reset(); // Clear the form
            fileList.innerHTML = ''; // Clear file list display
        });
    </script>
